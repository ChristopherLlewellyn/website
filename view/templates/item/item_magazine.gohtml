{{ define "properties" }}
          <table>
            <tr>
              <th>Capacity</th>
              <td>
                {{ .Item.Capacity }}
              </td>
            </tr>
            <tr>
              <th>Ergonomics</th>
              <td>{{ if gt .Item.Ergonomics 0 }}+{{ end }}{{ .Item.Ergonomics }}</td>
            </tr>
            {{ if ne .Item.Modifier.LoadUnload 0.0 }}
            <tr>
              <th>Load/Unload Time</th>
              <td>{{ if gt .Item.Modifier.LoadUnload 0.0 }}+{{ end }}{{ .Item.Modifier.LoadUnload }} %</td>
            </tr>
            {{ end }}
            {{ if ne .Item.Modifier.CheckTime 0.0 }}
            <tr>
              <th>Check Time</th>
              <td>{{ if gt .Item.Modifier.CheckTime 0.0 }}+{{ end }}{{ .Item.Modifier.CheckTime }} %</td>
            </tr>
            {{ end }}
            <tr>
              <th>Caliber</th>
              <td>
                <a class="underline" title="Show all magazines with caliber '{{ .Item.Caliber }}'" href="/item/magazine?caliber={{ .Item.Caliber }}">{{ .Item.Caliber }}</a>
              </td>
            </tr>
          </table>

          {{ template "gridModifier" . }}
{{ end }}

{{ define "sub_box" }}

      <div class="box sub">
        <ul class="tab-buttons">
          <li class="tab-btn active" onclick="openTab(event, 'cartridges')">Compatible Ammo</li>
          <li title="Can be used with following weapons" class="tab-btn" onclick="openTab(event, 'compatible')">Compatibility</li>
        </ul>

        <ul class="tabs">

          <li id="cartridges" class="tab" style="display:block;">
            <div class="items">
              <div class="table-big">
                <table class="item-table sort-table client-sort ammo">
                  <thead>
                    <tr title="Sort by">
                      <th>Name</th>
                      <th>Damage</th>
                      <th>Penetration</th>
                      <th>Armor Damage</th>
                      <th>Fragmentation</th>
                    </tr>
                  </thead>
                  <tbody>
                    {{ $result := getAmmunitionByCaliber .Item.Caliber "name" 100 }}
                    {{ range $result.Items }}
                    <tr>
                      <td>
                        <a href="/item/ammunition/{{ .ID }}">
                          {{ .ShortName }}
                        </a>
                      </td>
                      <td>{{ .Damage }} {{ if gt .Projectiles 1 }}({{ .Projectiles }}x){{ end }}</td>
                      <td>{{ .Penetration }}</td>
                      <td>{{ .ArmorDamage }}</td>
                      <td title="{{ .Fragmentation.Min }}{{ if ne .Fragmentation.Min .Fragmentation.Max }} - {{ .Fragmentation.Max }}{{ end }} Fragment(s)">{{ .Fragmentation.Chance | decimalToPercent }} %</td>
                    </tr>
                    {{ end }}
                  </tbody>
                </table>
              </div>
            </div>
          </li>

          <li id="compatible" class="tab">
            {{ template "compatibility" . }}
          </li>

        </ul>
      </div>

{{ end }}
